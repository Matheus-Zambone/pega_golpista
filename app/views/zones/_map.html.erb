<div class="container">
  <div class="row">
    <div class="col-12 col-lg-6 col-md-12">
      <div class="map">
        <%# initialize Google Map %>
        <div data-controller="maps" data-maps-markers-value="<%= @markers.to_json %>" data-maps-count-of-scammers-value="<%= @countOfScammers.to_json %>" id="map" style="width: 100%; height: 500px;"></div>
      </div>
    </div>
    <%# section search bar maps start %>
    <div class="col-lg-2" >
      <div class="search-for-scammers">
        <div class="card-1 card text-white h-100">
          <div class="card-body d-flex flex-column align-items-start">
            <h4 class="card-title text-center">Procure por golpistas</h4>
