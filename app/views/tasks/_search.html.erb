<%= form_with url: tasks_path, method: :get, class: "d-flex"  do %>
  <%= text_field_tag :search,
          params[:search],
          class: "form-control",
          placeholder: "Pesquise por tipo de golpe" %>
  <%= date_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Pesquise por data" %>
  <%= text_field_tag :zip,
          params[:zip],
          class: "form-control",
          placeholder: "Pesquise por cep" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <%= link_to "Limpar", tasks_path, class: "btn btn-secondary" %>
<% end %>
