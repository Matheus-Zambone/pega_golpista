<div style="height: 5vh"></div>
<%# search bar start %>
<%= form_with url: tasks_path, method: :get, class: "d-flex"  do %>
  <div class="input-group mt-2">
    <%= text_field_tag :search,
          params[:search],
          class: "form-control",
          placeholder: "Pesquise por tipo de golpe" %>
    <%= date_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Pesquise por data" %>
    <%= text_field_tag :zip,
          params[:zip],
          class: "form-control",
          placeholder: "Pesquise por cep" %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
    <%= link_to "Clear", tasks_path, class: "btn btn-secondary" %>
  <% end %>
</div>
<%# search bar end %>
<%# Render Tasks %>
<%= render 'table', tasks: @tasks %>
