<%# section map start %>
<div class="containner mt-5">
  <div class="row">
    <div class="col-lg-2" ></div>
    <div class="col-12 col-lg-6 col-md-12">
      <div class="map">
        <%# initialize Google Map %>
        <div data-controller="maps" data-action="click->maps#initializeMap" id="map" style="width: 100%; height: 500px;"></div>
      </div>
    </div>
    <%# section search bar maps start %>
    <div class="col-lg-2" >
      <div class="search-for-scammers">
        <div class="card-1 card text-white h-100">
          <div class="card-body d-flex flex-column align-items-start">
            <h4 class="card-title text-center">Procure por golpistas</h4>
            <div class="input-group">
              <input type="number" class="form-control" placeholder="CEP" aria-label="Recipient's cep" aria-describedby="button-addon2">
            </div>
            <div class="input-group mt-2">
              <input type="text" class="form-control" placeholder="Scammer Name" aria-label="Recipient's username" aria-describedby="button-addon2">
            </div>
            <div class="input-group mt-2">
              <input type="text" class="form-control" placeholder="Scammer Type" aria-label="Recipient's username" aria-describedby="button-addon2">
            </div>
            <div class="input-group mt-2">
              <input type="text" class="form-control" placeholder="Phone" aria-label="Recipient's phone" aria-describedby="button-addon2">
            </div>
            <div class="input-group mt-2">
              <input type="text" class="form-control" placeholder="e-mail" aria-label="Recipient's email" aria-describedby="button-addon2">
            </div>
            <p class="card-text banner-text mt-2">*Insira ao menos um dos campos e realize sua busca</p>
            <a href="#" class="btn-1 btn btn-danger w-100 text-white  mt-auto">BUSCAR</a>
          </div>
        </div>
      </div>
    </div>
